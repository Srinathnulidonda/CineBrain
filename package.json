{
  "name": "movierec-frontend",
  "version": "1.0.0",
  "description": "Movie Recommendation System Frontend",
  "scripts": {
    "start": "python -m http.server 8000",
    "build": "npm run optimize",
    "optimize": "npm run optimize:images && npm run optimize:css && npm run optimize:js",
    "optimize:images": "imagemin assets/images/**/* --out-dir=dist/assets/images",
    "optimize:css": "postcss assets/css/*.css --dir dist/assets/css",
    "optimize:js": "terser assets/js/*.js components/**/*.js pages/**/*.js -o dist/bundle.min.js",
    "deploy": "npm run build && rsync -avz dist/ user@server:/var/www/html/"
  },
  "devDependencies": {
    "imagemin-cli": "^7.0.0",
    "postcss-cli": "^10.0.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "terser": "^5.17.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}