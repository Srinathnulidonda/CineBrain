{
    "headers": [
        {
            "source": "/favicon.ico",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=3600, immutable"
                },
                {
                    "key": "Content-Type",
                    "value": "image/x-icon"
                }
            ]
        },
        {
            "source": "/assets/images/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Robots-Tag",
                    "value": "index, follow"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/([^/]+)/profile.html",
            "destination": "/user/profile.html?username=$1"
        },
        {
            "source": "/([^/]+)/profile",
            "destination": "/user/profile.html?username=$1"
        },
        {
            "source": "/([^/]+)/settings.html",
            "destination": "/user/settings.html?username=$1"
        },
        {
            "source": "/([^/]+)/settings",
            "destination": "/user/settings.html?username=$1"
        },
        {
            "source": "/([^/]+)/watchlist.html",
            "destination": "/user/watchlist.html?username=$1"
        },
        {
            "source": "/([^/]+)/watchlist",
            "destination": "/user/watchlist.html?username=$1"
        },
        {
            "source": "/([^/]+)/favorites.html",
            "destination": "/user/favorites.html?username=$1"
        },
        {
            "source": "/([^/]+)/favorites",
            "destination": "/user/favorites.html?username=$1"
        },
        {
            "source": "/([^/]+)/activity.html",
            "destination": "/user/activity.html?username=$1"
        },
        {
            "source": "/([^/]+)/activity",
            "destination": "/user/activity.html?username=$1"
        },
        {
            "source": "/([^/]+)/ratings.html",
            "destination": "/user/ratings.html?username=$1"
        },
        {
            "source": "/([^/]+)/ratings",
            "destination": "/user/ratings.html?username=$1"
        }
    ],
    "redirects": [
        {
            "source": "/user/profile.html",
            "destination": "/profile-redirect.html",
            "statusCode": 302
        },
        {
            "source": "/user/profile",
            "destination": "/profile-redirect.html",
            "statusCode": 302
        }
    ]
}