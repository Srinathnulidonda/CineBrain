{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/([^/]+)/profile/?",
      "destination": "/user/profile.html"
    },
    {
      "source": "/([^/]+)/watchlist/?",
      "destination": "/user/watchlist.html"
    },
    {
      "source": "/([^/]+)/favorites/?",
      "destination": "/user/favorites.html"
    },
    {
      "source": "/([^/]+)/activity/?",
      "destination": "/user/activity.html"
    },
    {
      "source": "/([^/]+)/settings/?",
      "destination": "/user/settings.html"
    },
    {
      "source": "/admin/?$",
      "destination": "/admin/index.html"
    },
    {
      "source": "/admin/(.*)/?",
      "destination": "/admin/index.html"
    },
    {
      "source": "/content/([^/]+)/?",
      "destination": "/content/details.html"
    }
  ],
  "headers": [
    {
      "source": "/**/*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/**/*.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}