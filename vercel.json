{
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://backend-app-970m.onrender.com/api/$1"
        },
        {
            "source": "/([^/]+)/profile",
            "destination": "/user/profile.html"
        },
        {
            "source": "/([^/]+)/watchlist",
            "destination": "/user/watchlist.html"
        },
        {
            "source": "/([^/]+)/favorites",
            "destination": "/user/favorites.html"
        },
        {
            "source": "/([^/]+)/settings",
            "destination": "/user/settings.html"
        },
        {
            "source": "/([^/]+)/activity",
            "destination": "/user/activity.html"
        },
        {
            "source": "/([^/]+)/search",
            "destination": "/content/search.html"
        },
        {
            "source": "/([^/]+)/details/(.*)",
            "destination": "/content/details.html"
        },
        {
            "source": "/([^/]+)/anime",
            "destination": "/content/anime.html"
        },
        {
            "source": "/([^/]+)/genre/(.*)",
            "destination": "/content/genre.html"
        },
        {
            "source": "/([^/]+)/regional/(.*)",
            "destination": "/content/regional.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}