{
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/login",
            "destination": "/auth/login.html"
        },
        {
            "source": "/register",
            "destination": "/auth/register.html"
        },
        {
            "source": "/forgot-password",
            "destination": "/auth/forgot-password.html"
        },
        {
            "source": "/search",
            "destination": "/content/search.html"
        },
        {
            "source": "/details",
            "destination": "/content/details.html"
        },
        {
            "source": "/anime",
            "destination": "/content/anime.html"
        },
        {
            "source": "/genre",
            "destination": "/content/genre.html"
        },
        {
            "source": "/regional",
            "destination": "/content/regional.html"
        },
        {
            "source": "/trending",
            "destination": "/content/trending.html"
        },
        {
            "source": "/:username/profile",
            "destination": "/user/profile.html"
        },
        {
            "source": "/watchlist",
            "destination": "/user/watchlist.html"
        },
        {
            "source": "/favorites",
            "destination": "/user/favorites.html"
        },
        {
            "source": "/activity",
            "destination": "/user/activity.html"
        },
        {
            "source": "/settings",
            "destination": "/user/settings.html"
        },
        {
            "source": "/admin",
            "destination": "/admin/index.html"
        },
        {
            "source": "/admin/content",
            "destination": "/admin/content.html"
        },
        {
            "source": "/admin/users",
            "destination": "/admin/users.html"
        },
        {
            "source": "/admin/analytics",
            "destination": "/admin/analytics.html"
        }
    ],
    "redirects": [
        {
            "source": "/index.html",
            "destination": "/",
            "permanent": true
        },
        {
            "source": "/auth/(.*).html",
            "destination": "/$1",
            "permanent": true
        },
        {
            "source": "/content/(.*).html",
            "destination": "/$1",
            "permanent": true
        },
        {
            "source": "/user/(.*).html",
            "destination": "/$1",
            "permanent": true
        },
        {
            "source": "/admin/(.*).html",
            "destination": "/admin/$1",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/js/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/css/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "functions": {
        "app.js": {
            "maxDuration": 10
        }
    },
    "buildCommand": "echo 'No build step required for static HTML'",
    "outputDirectory": ".",
    "cleanUrls": true,
    "trailingSlash": false
}