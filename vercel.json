{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/([^/]+)/profile/?",
      "dest": "/user/profile.html"
    },
    {
      "src": "/([^/]+)/watchlist/?",
      "dest": "/user/watchlist.html"
    },
    {
      "src": "/([^/]+)/favorites/?", 
      "dest": "/user/favorites.html"
    },
    {
      "src": "/([^/]+)/activity/?",
      "dest": "/user/activity.html"
    },
    {
      "src": "/([^/]+)/settings/?",
      "dest": "/user/settings.html"
    },
    {
      "src": "/admin/?$",
      "dest": "/admin/index.html"
    },
    {
      "src": "/admin/(.*)/?",
      "dest": "/admin/index.html"
    },
    {
      "src": "/content/([^/]+)/?",
      "dest": "/content/details.html"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$",
      "dest": "/$1.$2",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/**/*.html",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}