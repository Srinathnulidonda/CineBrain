{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://backend-app-970m.onrender.com/api/:path*"
        },
        {
            "source": "/:username/profile",
            "destination": "/user/profile.html"
        },
        {
            "source": "/:username/watchlist",
            "destination": "/user/watchlist.html"
        },
        {
            "source": "/:username/favorites",
            "destination": "/user/favorites.html"
        },
        {
            "source": "/:username/settings",
            "destination": "/user/settings.html"
        },
        {
            "source": "/:username/activity",
            "destination": "/user/activity.html"
        },
        {
            "source": "/:username/subscription",
            "destination": "/user/subscription.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}