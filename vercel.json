{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/([^/]+)/profile",
      "dest": "/user/profile.html"
    },
    {
      "src": "/([^/]+)/watchlist",
      "dest": "/user/watchlist.html"
    },
    {
      "src": "/([^/]+)/favorites", 
      "dest": "/user/favorites.html"
    },
    {
      "src": "/([^/]+)/activity",
      "dest": "/user/activity.html"
    },
    {
      "src": "/([^/]+)/settings",
      "dest": "/user/settings.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/index.html"
    },
    {
      "src": "/content/(.*)",
      "dest": "/content/details.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/**/*.html",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}